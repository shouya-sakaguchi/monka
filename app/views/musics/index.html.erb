<% if notice %>
<div class="alert alert-success alert-dismissible" role="alert">
<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span ari
a-hidden="true">&times;</span></button>
<p id="notice"><%= notice %></p>
</div>
<% end %>
<h2 class="sub-header">Musics</h2>
<div class="table-responsive">
<table class="table table-striped">
<thead>
<tr>
<th>タイトル</th>
<th>アーティスト</th>
<th>発売年⽉</th>
<th>再生時間</th>
<th>発売</th>
<th colspan="3"></th>
</tr>
</thead>
<tbody>
<% @music.each do |music| %>
<tr>
<td><%= music.title %></td>
<td><%= music.author %></td>
<td><%= music.published_on.try(:strftime, '%Y年%m⽉') %></td>
<td><%= music.play_time %></td>
<td><%= music.showing? ? '可能' : '不可' %></td>
<td><%= link_to '詳細', music %></td>
<td><%= link_to '編集', edit_music_path(music) %></td>
<td><%= link_to '削除', music, method: :delete, data: { confirm: '本当に削除しても
いいですか？' } %></td>
</tr>
<% end %>
</tbody>
</table>
</div>
<br>
<%= link_to '新規登録', new_music_path, class: 'btn btn-default' %>
